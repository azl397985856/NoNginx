<div class="container" ng-controller="mainCtrl">
  <h1 class="title">Warcraft</h1>
  <br>
  <form class="form-horizontal" name="form">
    <div class="form-group">
	<div class="col-sm-10">
	  	<h2 class="label_url">我掐指一算，你现在连的是：<span id="label">....</span>，对不对？ </h2><br/><br/>
	</div>
      <div class="col-sm-10">
      	<input id="address" type="text" class="address" placeholder="请输入需要连接的url"/><br/><br/>
      </div>
    </div>
    
    <div class="form-group">
      <div style="width:100%;text-align:center;">
        <a type="button" id="ok" class="ant-btn ant-btn-primary">就是你了！</a>
      </div>
    </div>
  </form>
</div><br/><br/>

<div style="width:100%;text-align:center;"><a href="http://localhost:2015">If you want to see the api data, visit api-document please.</a></div>

<script src="/lib/jquery/dist/jquery.min.js"></script>
<script type="text/javascript" >
	function setLabel() {
		$('#label').text(window.localStorage.url);
	}
	(function() {
		setLabel();
	})();
	$(document).keydown(function(event){
		// event.preventDefault();
		if (event.keyCode === 13) {
			sendXHR();
		}
	});
	function sendXHR() {
		var url = $('#address').val();
		window.localStorage.url = url;
		if ($('#address').val() === '')
			return;
		$.get('/write?url=' + url, {}, alert('URL成功变更为' + url));
		setLabel();
	}
	$('#ok').click(function(){
    	sendXHR();	
	});
</script>
